{
  "name": "ebike-assistant-app",
  "private": true,
  "version": "1.0.0",
  "description": "Your comprehensive e-bike maintenance and troubleshooting companion",
  "author": "knoksen <support@ebike-assistant.app>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "vitest run --mode=development",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prep:release": "npm run lint && npm test && npm run build",
    "release:check": "npm run prep:release && echo Ready for tagging",
    "screenshots": "playwright test --config=playwright.config.ts --grep @screenshot && npm run screenshots:optimize",
    "screenshots:raw": "playwright test --config=playwright.config.ts --grep @screenshot",
    "screenshots:optimize": "node scripts/optimize-screenshots.mjs",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:azure": "npm run build",
    "build:analyze": "ANALYZE=true npm run build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:win": "npm run build && electron-builder --win --publish=never",
    "electron:mac": "npm run build && electron-builder --mac --publish=never",
    "electron:linux": "npm run build && electron-builder --linux --publish=never",
    "icon:generate": "node scripts/generate-icon.mjs"
  },
  "dependencies": {
    "applicationinsights": "^3.0.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.1.0",
    "globals": "^13.24.0",
    "jsdom": "^23.0.1",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^5.11.0",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.3.3",
    "vite": "^7.1.4",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.knoksen.ebike-assistant",
    "productName": "E-Bike Assistant",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public/ebike-icon.svg",
        "to": "icon.svg"
      }
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "public/ebike-icon.svg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/ebike-icon.svg",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "E-Bike Assistant",
      "uninstallDisplayName": "E-Bike Assistant"
    },
    "portable": {
      "artifactName": "E-Bike-Assistant-Portable-${version}.${ext}"
    }
  },
  "homepage": "https://knoksen.github.io/ebike-assistant-app",
  "license": "MIT"
}
